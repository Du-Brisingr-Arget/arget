#!/bin/bash

mkdir -p ~/arget
cd ~/arget
touch package-names.argt
touch package-urls.argt

if [ $1 = '-i' ]; then
  echo $2 > package-names.argt
   for f in `cat package-names.argt`; do 
   `echo https://aur.archlinux.org/$f.git > package-urls.argt`
  done 
  
  for f in `cat repository.argt`; do 
    mkdir ./arget-tmp
    cd arget-tmp
    `git clone $f`
    gitname=$( ls )
    cd $gitname
    makepkg -sirc --noconfirm
    cd ..
    cd ..
    rm -rf arget-tmp
  done 
fi
