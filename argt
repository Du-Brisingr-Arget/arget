#!/bin/bash

cd /arget

if [ "$1" = "-i" ]
then
  echo $2 > installtmp.argt
  for d in 'cat installtmp.argt'
  do
    curl -s --head https://aur.archlinux.org/packages/$d | head -n 1 | grep "HTTP/1.[01] [23].." > /dev/null
    if [[ "$?" = "0" ]]
    then
      echo $d >> install.argt
      echo $d >> installtmp2.argt
      aur=1
    else
      aur=0
    fi
  done
